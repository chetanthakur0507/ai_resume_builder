<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-10 bg-gray-100">
  <h1 class="text-2xl font-bold mb-6">Admin Panel - Templates</h1>

  <form action="/admin/upload" method="POST" enctype="multipart/form-data" class="mb-10 bg-white p-6 rounded shadow">
    <h2 class="text-lg font-semibold mb-4">Upload New Template</h2>
    <input name="name" placeholder="Template Name" required class="block w-full mb-3 px-4 py-2 border rounded" />
    <input type="file" name="template" accept=".ejs" required class="block w-full mb-3" />
    <input type="file" name="image" accept="image/*" required class="block w-full mb-3" />
    <button class="bg-green-600 text-white px-4 py-2 rounded">Upload</button>
  </form>

  <div class="grid grid-cols-3 gap-4">
    <% templates.forEach(template => { %>
      <div class="bg-white p-4 rounded shadow">
        <img src="<%= template.previewImage %>" class="w-full h-40 object-cover mb-2" />
        <h3 class="font-semibold mb-2"><%= template.name %></h3>
        <form action="/admin/delete/<%= template._id %>" method="POST">
          <button class="bg-red-500 text-white px-3 py-1 rounded">Delete</button>
        </form>
      </div>
    <% }) %>
  </div>
</body>
</html>
